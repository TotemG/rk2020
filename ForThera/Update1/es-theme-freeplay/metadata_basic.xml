<theme>

    <formatVersion>4</formatVersion>
	
	<view name="basic"></view>
    
	<view name="detailed"></view>
	
	<view name="video">

		<!-- hide marquee -->
		<image name="md_marquee">
			<pos>1 1</pos>
			<origin>0 0</origin>
		</image>

		
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
			<color>FFFFFF</color>

			<fontSize>0.035</fontSize>
			<fontPath>./_inc/fonts/Helsinki-Narrow.ttf</fontPath>
			<size>0.14 0.04</size>
			<alignment>right</alignment>
			<lineSpacing>1.0</lineSpacing>
		</text>
		<text name="md_developer, md_publisher, md_genre, md_players, md_playcount">
			<color>FFFFFF</color>

			<fontSize>0.035</fontSize>
			<fontPath>./_inc/fonts/Helsinki-Narrow.ttf</fontPath>
			<size>0.185 0.04</size>
			<lineSpacing>1.0</lineSpacing>
		</text>
		<datetime name="md_releasedate, md_lastplayed">	
			<color>FFFFFF</color>
			<fontSize>0.035</fontSize>
			<fontPath>./_inc/fonts/Helsinki-Narrow.ttf</fontPath>
		</datetime>

		<text name="md_lbl_rating">
			<pos>0.645 0.0225</pos>
		</text>
		<rating name="md_rating">
			<pos>0.7925 0.0225</pos>
			<size>0.185 0.035</size>
			<filledPath>./_inc/images/star_full.png</filledPath>
			<unfilledPath>./_inc/images/star_hollow.png</unfilledPath>
			<color>ffffff</color>
		</rating>
		
		<text name="md_lbl_releasedate">
			<pos>0.645 0.065</pos>
		</text>
		<datetime name="md_releasedate">
			<pos>0.7925 0.0625</pos>
		</datetime>

		<text name="md_lbl_developer">
			<pos>0.645 0.105</pos>
		</text>
		<text name="md_developer">
			<pos>0.7925 0.105</pos>
		</text>

		<text name="md_lbl_publisher">
			<pos>0.645 0.145</pos>
		</text>
		<text name="md_publisher">
			<pos>0.7925 0.145</pos>
		</text>

		<text name="md_lbl_genre">
			<pos>0.645 0.185</pos>
		</text>
		<text name="md_genre">
			<pos>0.7925 0.185</pos>
		</text>

		<text name="md_lbl_players">
			<pos>0.645 0.225</pos>
		</text>
		<text name="md_players">
			<pos>0.7925 0.225</pos>
		</text>

		<text name="md_lbl_lastplayed">
			<pos>0.645 0.265</pos>
		</text>
		<datetime name="md_lastplayed">
			<pos>0.7925 0.2625</pos>
		</datetime>

		<text name="md_lbl_playcount">
			<pos>0.645 0.305</pos>
		</text>
		<text name="md_playcount">
			<pos>0.7925 0.305</pos>
		</text>

	</view>
	
	<view name="grid"></view>

</theme>